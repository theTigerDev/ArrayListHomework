<Window x:Class="arrayListHomework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arrayListHomework"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="79,93,0,0" TextWrapping="Wrap" Text="Fill your name..." VerticalAlignment="Top" Width="321"/>
        <Button x:Name="btn_Add" Content="Add" HorizontalAlignment="Left" Margin="79,127,0,0" VerticalAlignment="Top" Width="75" Click="btn_Add_Click"/>
        <Button x:Name="btn_Remove" Content="Remove" HorizontalAlignment="Left" Margin="203,127,0,0" VerticalAlignment="Top" Width="75" Click="btn_Remove_Click"/>
        <Button x:Name="btn_Show" Content="ShowAll" HorizontalAlignment="Left" Margin="325,127,0,0" VerticalAlignment="Top" Width="75" Click="btn_Show_Click"/>
        <TextBox x:Name="txtShow" HorizontalAlignment="Left" Height="23" Margin="79,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="321" IsReadOnly="True" Background="#FFF1EEEE"/>
        <Label x:Name="label" Content="Show Data" HorizontalAlignment="Left" Margin="79,171,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
